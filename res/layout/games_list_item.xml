<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="104dp"
                android:background="@drawable/list_item_background">
    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/artists_list_margin"
            android:id="@+id/item_image"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>


    <ImageView
            android:id="@+id/forward_arrow"
            android:layout_width="@dimen/right_arrow_size"
            android:layout_height="@dimen/right_arrow_size"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/forward_arrow"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Game"
            android:textSize="@dimen/list_item_text_size"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_image"
            android:layout_toLeftOf="@id/forward_arrow"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:textColor="@color/gunmetal_blue"
            android:id="@+id/item_title"/>
</RelativeLayout>