<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottomParent"
        android:background="@color/transparent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/onscene"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_centerHorizontal="true"
                android:text="@string/menu_bottom_title"
                android:textColor="@color/menu_text_color"
                android:id="@+id/textView3"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/onscene"
            android:id="@+id/line1"
            android:background="@color/menu_text_color" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/line1"
            android:background="@color/menu_bottom_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="0sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/menu_text_color"
                        android:id="@+id/textView"/>
            </RelativeLayout>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/now1"/>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/now2"/>
        </LinearLayout>
        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/menu_text_color" />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="0sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/menu_text_color"
                        android:id="@+id/textView4"/>
            </RelativeLayout>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/after1"/>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/after2"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>