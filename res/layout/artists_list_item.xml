<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/artist_list_item_height"
                android:background="@drawable/list_item_background">
    <ImageView
            android:layout_width="@dimen/artist_list_image_size"
            android:layout_height="@dimen/artist_list_image_size"
            android:id="@+id/item_image"
            android:layout_margin="@dimen/artist_list_item_image_margin"
            android:layout_alignParentLeft="true"/>

        <ImageView
                android:id="@+id/forward_arrow"
            android:layout_width="@dimen/right_arrow_size"
            android:layout_height="@dimen/right_arrow_size"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/forward_arrow"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Artist"
                android:textStyle="bold"
                android:textSize="@dimen/list_item_text_size"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/item_image"
                android:layout_toLeftOf="@id/forward_arrow"
                android:layout_marginLeft="8dp"
                android:textColor="@color/gunmetal_blue"
                android:singleLine="true"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:id="@+id/item_title"/>
</RelativeLayout>