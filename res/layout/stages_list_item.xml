<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background">
    <ImageView
            android:layout_width="@dimen/artist_list_image_size"
            android:layout_height="@dimen/artist_list_image_size"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/artists_list_margin"
            android:layout_marginBottom="@dimen/artists_list_margin"
            android:id="@+id/item_image"
            android:src="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

    <ImageView
            android:layout_width="4dp"
            android:layout_height="@dimen/artist_list_image_size"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:id="@+id/item_line"
            android:background="@color/gunmetal_blue"
            android:layout_alignParentLeft="true"/>
    <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/right_arrow_size"
            android:layout_height="@dimen/right_arrow_size"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/forward_arrow"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_image"
            android:layout_toLeftOf="@id/arrow"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/stage_list_item_artist_text_size"
                android:layout_marginTop="-2dp"
                android:text="Artist"
                android:singleLine="true"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/gunmetal_blue"
                android:id="@+id/item_title"/>
            <TextView
                    android:layout_marginTop="@dimen/stage_list_item_time_text_topmargin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/stage_list_item_time_text_size"
                    android:text="19:00 - 20:00"
                    android:textColor="@color/gunmetal_blue"
                    android:id="@+id/item_time"/>
    </LinearLayout>


</RelativeLayout>